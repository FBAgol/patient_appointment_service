# EditorConfig f√ºr konsistente Code-Formatierung
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.java]
indent_style = space
indent_size = 2
max_line_length = 100
ij_java_imports_layout = java.**,javax.**,jakarta.**,|,org.**,|,com.**,|,test.**,|,*
ij_java_class_count_to_use_import_on_demand = 999
ij_java_names_count_to_use_import_on_demand = 999

[*.xml]
indent_style = tab
indent_size = 1

[*.md]
indent_style = space
indent_size = 2
max_line_length = 120

[*.{yaml,yml}]
indent_style = space
indent_size = 2

[pom.xml]
indent_style = tab

